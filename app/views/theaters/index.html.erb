<h1>Listing theaters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address city</th>
    <th>Address state</th>
    <th>Address zip</th>
    <th>Address street</th>
  </tr>

<% for theater in @theaters %>
  <tr>
    <td><%=h theater.name %></td>
    <td><%=h theater.address_city %></td>
    <td><%=h theater.address_state %></td>
    <td><%=h theater.address_zip %></td>
    <td><%=h theater.address_street %></td>
    <td><%= link_to 'Show', movie_theater_path(@theater) %></td>
    <td><%= link_to 'Edit', edit_movie_theater_path(@theater) %></td>
    <td><%= link_to 'Destroy', movie_theater_path(@theater), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

